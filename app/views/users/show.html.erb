<div class="container-fluid p-0">
  <div class="container m-auto header-text title profile-bg">
    
    <header class="text-center mb-4">
      <div class="row justify-content-end ">
        <div class="col-3 mr-2">
          <%= render partial: 'sessions/logout_link' %>
        </div>        
      </div>
      <%= user_avatar(@user) %>
      <h1><%= @user.name%></h1>
    </header>

    <body class="row">
      <ul class="col-9 p-0 m-auto d-flex flex-column justify-content-center">
        <li id="all_attn">
          <div class="menu-border">
            <%= link_to 'All my Attendances', attendances_path, class: 'header-text' %><br> 
          </div> 
        </li>         
        <li id="all_ext_attn">
          <div class="menu-border">
            <%= link_to 'All my External Attendances', external_attendances_path, class: 'header-text text-nowrap' %><br>
          </div>
        </li>
        <li id="all_groups">
          <%= link_to 'All Groups', groups_path, class: 'header-text' %>
        </li>        
      </ul>      
    </body>
  </div>
  
</div>






